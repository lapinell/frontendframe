{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
      "ignoreAtRules": [
        "import-glob",
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null
  }
}